[Unit]
Description=Automerge Rust Dev Sync Server
After=network.target

[Service]
Type=simple
User=root
Environment="RUST_LOG=automerge_repo=debug,info" "DATA_DIR=/root/automerge-server-data/dev" "PORT=8081" "HTTP_PORT=81"
WorkingDirectory=/root/automerge-rust-sync-server
ExecStart=/root/.cargo/bin/cargo run --release
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target